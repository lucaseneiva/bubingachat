@startuml c4
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

left to right direction

Person(user, "User", "Application user")

System_Boundary(application, "Application") {
    Container(web_app, "Web Application", "React", "Provides application UI via browser")
    Container(api, "API Server", "Node.js/Express + Socket.io", "Handles REST API and real-time messaging")
    ContainerDb(db, "Database", "PostgreSQL", "Stores users, servers, channels, messages")
}

Rel(user, web_app, "Uses", "HTTPS")
Rel(web_app, api, "Makes API calls to", "HTTPS/REST")
BiRel(web_app, api, "Real-time messaging", "WebSocket")
Rel(api, db, "Reads from and writes to", "TCP/IP")

@enduml